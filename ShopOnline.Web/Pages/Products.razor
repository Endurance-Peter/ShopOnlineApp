
@page "/"
@using ShopOnline.Model.Dtos
@inherits ProductsBase

@if (Products == null)
{
    <h3>Loading products</h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();

    if (productCount > 0)
    {
        var groupedProductsByCategory = GetGroupedProductsCategory();
        foreach (var prodGroup in groupedProductsByCategory)
        {
            <h4>@GetCategoryName(prodGroup)</h4>
            
            <div class="row mt-3">

                <DisplayProducts Products="@prodGroup.Take(4)"></DisplayProducts>

            </div>
        }
        <hr class="mb-3" />
    }
}
